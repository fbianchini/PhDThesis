@article{Singh2016,
abstract = {We present first results from cross-correlating Planck CMB lensing maps with the Sloan Digital Sky Survey (SDSS) galaxy lensing shape catalog and BOSS galaxy catalogs. For galaxy position vs. CMB lensing cross-correlations, we measure the convergence signal around the galaxies in configuration space, using the BOSS LOWZ ({\$}z\backslashsim0.30{\$}) and CMASS ({\$}z\backslashsim0.57{\$}) samples. With fixed Planck 2015 cosmology, doing a joint fit with the galaxy clustering measurement, for the LOWZ (CMASS) sample we find a galaxy bias {\$}b{\_}g=1.75\backslashpm0.04{\$} ({\$}1.95\backslashpm 0.02{\$}) and galaxy-matter cross-correlation coefficient {\$}r{\_}{\{}cc{\}}=1.0\backslashpm0.2{\$} ({\$}0.8\backslashpm 0.1{\$}) using {\$}20{\textless}r{\_}p{\textless}70{\$} Mpc/h, consistent with results from galaxy-galaxy lensing. Using the same scales and including the galaxy-galaxy lensing measurements, we constrain {\$}\backslashOmega{\_}m=0.284\backslashpm0.024{\$} and relative calibration bias between the CMB lensing and galaxy lensing to be {\$}b{\_}\backslashgamma=0.82{\^{}}{\{}+0.15{\}}{\_}{\{}-0.14{\}}{\$}. The combination of galaxy lensing and CMB lensing also allows us to measure the cosmological distance ratios (with {\$}z{\_}l\backslashsim0.3{\$}, {\$}z{\_}s\backslashsim0.5{\$}) {\$}\backslashmathcal R=\backslashfrac{\{}D{\_}s D{\_}{\{}l,*{\}}{\}}{\{}D{\_}* D{\_}{\{}l,s{\}}{\}}=2.68\backslashpm0.29{\$}, consistent with predictions from the Planck 2015 cosmology ({\$}\backslashmathcal R=2.35{\$}). We detect the galaxy position-CMB convergence cross-correlation at small scales, {\$}r{\_}p{\textless}1{\$} Mpc/h, and find consistency with lensing by NFW halos of mass {\$}M{\_}h\backslashsim10{\^{}}{\{}13{\}}{\$}{\$}h{\^{}}{\{}-1{\}}M{\_}{\{}\backslashodot{\}}{\$}. Finally, we measure the CMB lensing-galaxy shear cross-correlation, finding an amplitude of {\$}A=0.76\backslashpm0.23{\$} ({\$}z{\_}\backslashtext{\{}eff{\}}=0.35{\$}, {\$}\backslashtheta{\textless}2{\^{}}\backslashcirc{\$}) with respect to Planck 2015 {\$}\backslashLambda{\$}CDM predictions ({\$}1\backslashsigma{\$}-level consistency). We do not find evidence for relative systematics between the CMB and SDSS galaxy lensing.},
